#change monitor
#keybinds
#f - second screen only
#n - laptop screen only
#x - extend second monitor
#l - extend laptop screen
#m - mirror laptop screen
mode ""{
     bindsym f exec --no-startup-id xrandr --output $HDMI --auto --right-of $laptop && xrandr --output $laptop --off && xrandr --output $HDMI --primary && pywal -Re, mode "default"
     bindsym n exec --no-startup-id xrandr --output $laptop --auto --left-of $HDMI && xrandr --output $HDMI --off && xrandr --output $laptop --primary && pywal -Re, mode "default"
     #bindsym m exec --no-startup-id xrandr --fb $HDMI_resolution --output $HDMI --mode $HDMI_resolution --same-as $laptop --scale-from $laptop_resolution, mode "default"
     bindsym x exec --no-startup-id xrandr --output $HDMI --auto --right-of $laptop && pywal -Re, mode "default"
     bindsym l exec --no-startup-id xrandr --output $laptop --auto --left-of $HDMI && pywal -Re, mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+p mode ""


#session action
mode ""{
     bindsym s exec "shutdown now", mode "default"
     bindsym r exec "reboot", mode "default"
     bindsym e exec "i3-msg exit", mode "default"
     bindsym w exec "systemctl suspend", mode "default"
     bindsym Escape mode "default"
}
bindsym $mod1+Escape mode ""

